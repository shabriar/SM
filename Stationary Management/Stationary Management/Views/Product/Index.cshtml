@model IEnumerable<Stationary_Management.Entity.Products>
@{
    ViewBag.Title = "Products";
}
<section class="content-header">
    <h1>
        &nbsp;
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Configuration</a></li>
        <li class="active">Products</li>
    </ol>
</section>
<section class="content">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Products List</h3>
                <div class="box-tools pull-right">
                    @*<a href="@Url.Action("Import","Product")" class="btn btn-box-tool" title="Import Product"><i class="fa fa-wrench"></i></a>
                    <a href="@Url.Action("ImportWarehouseStock","Product")" class="btn btn-box-tool" title="Import Product"><i class="fa fa-pencil"></i></a>*@

                    <a href="@Url.Action("Add", "Product")" class="btn btn-default btn-box-tool">
                        <i class="fa fa-plus"></i> Add
                    </a>
                    @*<div class="btn-group">
                        <button type="button" class="btn btn-box-tool dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-wrench"></i>
                        </button>
                    </div>*@
                    <a href="@Url.Action("Index", "Product")" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered table-striped table-condensed table-hover">
                            <thead>
                                <tr>                                   
                                    <th>
                                        @Html.DisplayNameFor(model => model.ProductCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ProductName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Details)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.StockAmount)
                                    </th>                                                                        
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="accordion">
                                @foreach (var item in Model)
                                {
                                    <sometag class="panel">
                                        <tr>
                                            
                                            <td>
                                                <a class="btn btn-xs" href="@Url.Action("Details","Product",new {id=item.Id })" title="Details"> @Html.DisplayFor(modelItem => item.ProductCode)</a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ProductName)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Details)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StockAmount)
                                            </td>
                                            
                                            <td>
                                                <a class="btn btn-default btn-xs" href="@Url.Action("Edit","Product",new {id=item.Id })" title="Edit"><i class="fa fa-pencil"></i>Edit</a>
                                                <a class="btn btn-default btn-xs" href="@Url.Action("Delete","Product",new {id=item.Id })" title="Delete"><i class="fa fa-pencil"></i>Delete</a>
                                                <a class="btn btn-default btn-xs" href="@Url.Action("Details","Product",new {id=item.Id })" title="Details"><i class="fa fa-pencil"></i>Details</a>
                                            </td>

                                        </tr>
                                       
                                    </sometag>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/AjaxCall")
    <script>
        function delete_row(id) {
            if (confirm("Are you want to Delete")) {
                var url = '@Url.Action("Delete", "Product")';
                var paramData = { id: id };
                ajaxCall(url, paramData, "renderRemoveItem");
            }

            }

    </script>
}


