@model SCHM.Web.Models.ProductModel
@{
    ViewBag.Title = "Details";
}


<section class="content-header">
    <h1>
        Configruration
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Configuration</a></li>
        <li class="active">Details</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Products Details</h3>
                        <div class="box-tools pull-right">
                            <a href="@Url.Action("Index", "Product")" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></a>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ProductCode, new { @class = "col-sm-3 control-label text-left" })
                                    <div class="col-sm-6">
                                        <label class="data-label control-label">  @Html.DisplayFor(model => model.ProductCode) </label>

                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ProductName, new { @class = "col-sm-3 control-label text-left" })
                                    <div class="col-sm-6">
                                        <label class="data-label control-label">  @Html.DisplayFor(model => model.ProductName) </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.HsCode, new { @class = "col-sm-3 control-label text-left" })
                                    <div class="col-sm-6">
                                        <label class="data-label control-label">  @Html.DisplayFor(model => model.HsCode) </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CategoryId, new { @class = "col-sm-3 control-label text-left" })
                                    <div class="col-sm-6">
                                        <label class="data-label control-label">  @Html.DisplayFor(model => model.Category.CategoryName) </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CountryId, new { @class = "col-sm-3 control-label text-left" })
                                    <div class="col-sm-6">
                                        <label class="data-label control-label">  @Html.DisplayFor(model => model.Country.Name) </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.UnitPrice, new { @class = "col-sm-3 control-label text-left" })
                                    <div class="col-sm-6">
                                        <label class="data-label control-label">  @Html.DisplayFor(model => model.UnitPrice) </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.UnitId, new { @class = "col-sm-3 control-label text-left" })
                                    <div class="col-sm-6">
                                        <label class="data-label control-label">  @Html.DisplayFor(model => model.MeasuremnentUnit.UnitName) </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PackingSize, new { @class = "col-sm-3 control-label text-left"})
                                    <div class="col-sm-6">
                                        <label class="data-label control-label">  @Html.DisplayFor(model => model.PackingSize) </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ManufacturerId, new { @class = "col-sm-3 control-label text-left" })
                                    <div class="col-sm-6">
                                        <label class="data-label control-label">  @Html.DisplayFor(model => model.Manufacturer.Name) </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ItemStockCollection.First().QuantityStock, new { @class = "col-sm-3 control-label text-left" })
                                    <div class="col-sm-6">
                                        <label class="data-label control-label">  @(Model.ItemStockCollection.Sum(x => x.QuantityStock)) </label>
                                    </div>
                                </div>
                                <div class="from-group">

                                </div>
                            </div>
                        </div>

                
                        <!-- /.row -->
                        <!-- END ACCORDION & CAROUSEL-->
                    </div>
                    <div class="box-footer">
                        <div class="col-md-12">
                            <a href="@Url.Action("Index", "Product")" class="btn btn-danger btn-sm"><i class="fa fa-times-circle"></i> Cancel</a>
                            
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/AjaxCall")
    <script>
        $('.datepicker').datepicker({
            autoclose: true,
            format: 'dd-M-yyyy'
        })
    </script>
}


